{
  "AI": {
    "PrimaryEngine": "Ollama",
    "FallbackEngine": "HuggingFace",
    "OllamaEndpoint": "http://localhost:11434",
    "HF_Token": "",
    "RequestTimeout": 30,
    "MaxRetries": 3,
    "CircuitBreakerThreshold": 3,
    "CircuitBreakerTimeoutMinutes": 5,
    "PreferredModel": "deepseek-coder:1.3b-instruct",
    "ModelConfig": {
      "temperature": 0.3,
      "max_tokens": 300,
      "top_p": 0.9
    }
  },
  "Vision": {
    "UseOpenCV": true,
    "CaptureFPS": 5,
    "ROIDetection": true,
    "ChangeDetectionThreshold": 0.05,
    "EnableGPUAcceleration": true,
    "MaxImageWidth": 1920,
    "MaxImageHeight": 1080,
    "CompressionQuality": 85
  },
  "Audio": {
    "Engine": "VOSK",
    "SampleRate": 16000,
    "ModelPath": "vosk-model-en-us-0.22",
    "BufferSize": 4096,
    "EnableNoiseReduction": true,
    "ConfidenceThreshold": 0.7
  },
  "Processing": {
    "MainLoopIntervalMs": 2000,
    "AdaptiveDelay": true,
    "MaxConcurrentRequests": 3,
    "EnableChangeDetection": true,
    "LogLevel": "Information"
  },
  "Performance": {
    "EnableMemoryOptimization": true,
    "GCCollectionInterval": 300,
    "MaxMemoryUsageMB": 1024,
    "EnableProfiling": false
  },
  "Tesseract": {
    "DataPath": "./tessdata",
    "Languages": "eng+fra",
    "EngineMode": "LstmOnly",
    "PageSegMode": "Auto",
    "Timeout": 30
  }
}
